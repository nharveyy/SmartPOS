<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="oop.licao.smartpos.controller.LoginController"
            style="-fx-background-color: linear-gradient(to bottom right, #34495e, #2c3e50);">

    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 40;">
            <children>
                <Label text="SmartPOS Login"
                       style="-fx-text-fill: white; -fx-font-size: 28; -fx-font-weight: bold;"/>

                <VBox spacing="10" alignment="CENTER">
                    <children>
                        <Label text="Email:" style="-fx-text-fill: white;"/>
                        <TextField fx:id="usernameField" promptText="Enter your email"
                                   style="-fx-pref-width: 250; -fx-background-radius: 6;"/>
                        <Label text="Password:" style="-fx-text-fill: white;"/>
                        <PasswordField fx:id="passwordField" promptText="Enter your password"
                                       style="-fx-pref-width: 250; -fx-background-radius: 6;"/>
                    </children>
                </VBox>

                <VBox spacing="10" alignment="CENTER">
                    <children>
                        <Button text="Login"
                                onAction="#handleLogin"
                                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 8; -fx-pref-width: 250; -fx-font-size: 14;"/>
                        <Button text="Create Account"
                                onAction="#handleCreateAccount"
                                style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-background-radius: 8; -fx-pref-width: 250; -fx-font-size: 14;"/>
                    </children>
                </VBox>
            </children>
        </VBox>
    </center>
</BorderPane>
