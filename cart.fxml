<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="oop.licao.smartpos.controller.CartController">

    <!-- ðŸ§­ STYLED HEADER BAR -->
    <top>
        <HBox spacing="15" alignment="CENTER_LEFT"
              style="-fx-background-color: #2c3e50; -fx-padding: 10;">
            <children>
                <Label text="SmartPOS"
                       style="-fx-text-fill: white; -fx-font-size: 18; -fx-font-weight: bold;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Back"
                        onAction="#handleBack"
                        style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
                <Button text="ðŸ›’ Cart"
                        onAction="#handleGoToCart"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
                <Button text="ðŸšª Logout"
                        onAction="#handleLogout"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
            </children>
        </HBox>
    </top>


    <!-- ðŸ› CART CONTENT -->
    <center>
        <VBox spacing="10" alignment="CENTER" style="-fx-padding: 20;">
            <children>
                <Label text="Your Cart"
                       style="-fx-font-size: 18; -fx-font-weight: bold;"/>

                <TableView fx:id="cartTable" prefHeight="400" prefWidth="900">
                    <columns>
                        <TableColumn fx:id="productColumn" text="Product" prefWidth="250"/>
                        <TableColumn fx:id="priceColumn" text="Price" prefWidth="100"/>
                        <TableColumn fx:id="qtyColumn" text="Qty" prefWidth="80"/>
                        <TableColumn fx:id="subtotalColumn" text="Subtotal" prefWidth="120"/>
                        <TableColumn fx:id="actionColumn" text="Actions" prefWidth="250"/>
                        
                    </columns>
                </TableView>

                <HBox spacing="15" alignment="CENTER_RIGHT">
                    <children>
                        <Label fx:id="totalLabel" text="Total: â‚±0.00"
                               style="-fx-font-size: 16; -fx-font-weight: bold;"/>
                        <Button text="Proceed to Checkout"
                                onAction="#handleCheckout"
                                style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>
</BorderPane>
