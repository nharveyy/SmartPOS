<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="oop.licao.smartpos.controller.RegisterController"
            style="-fx-background-color: linear-gradient(to bottom right, #2980b9, #2c3e50);">

    <center>
        <VBox alignment="CENTER" spacing="15" style="-fx-padding: 30;">
            <children>
                <Label text="Create Account"
                       style="-fx-text-fill: white; -fx-font-size: 26; -fx-font-weight: bold;"/>

                <VBox spacing="10" alignment="CENTER">
                    <children>
                        <TextField fx:id="firstNameField" promptText="First Name"
                                   style="-fx-pref-width: 250; -fx-background-radius: 6;"/>
                        <TextField fx:id="lastNameField" promptText="Last Name"
                                   style="-fx-pref-width: 250; -fx-background-radius: 6;"/>
                        <TextField fx:id="emailField" promptText="Email"
                                   style="-fx-pref-width: 250; -fx-background-radius: 6;"/>
                        <PasswordField fx:id="passwordField" promptText="Password"
                                       style="-fx-pref-width: 250; -fx-background-radius: 6;"/>
                        <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password"
                                       style="-fx-pref-width: 250; -fx-background-radius: 6;"/>
                    </children>
                </VBox>

                <VBox spacing="10" alignment="CENTER">
                    <children>
                        <Button text="Register"
                                onAction="#handleRegister"
                                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 8; -fx-pref-width: 250;"/>
                        <Button text="Back to Login"
                                onAction="#handleBackToLogin"
                                style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-background-radius: 8; -fx-pref-width: 250;"/>
                    </children>
                </VBox>
            </children>
        </VBox>
    </center>
</BorderPane>
